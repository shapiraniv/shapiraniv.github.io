---
import Nav from '../components/Nav.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  lang: 'en' | 'he';
}

const { title = 'Niv Shapira', lang } = Astro.props;
const isRTL = lang === 'he';
---

<!doctype html>
<html lang={lang} dir={isRTL ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content="Homepage of Niv Shapira, Designer and Animator" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta property="og:title" content="Niv Shapira" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://shapiraniv.com/" />
    <meta property="og:description" content="Homepage of Niv Shapira, Designer and Animator" />
    <meta property="og:image" content="/img/niv-shapira-studio/niv-shapira-studio-logo-en-192x192.png" />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@200;300;400;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container" id="app">
      <div class="row">
        <div class="col-12 col-sm-4 col-md-3 col-lg-2">
          <Nav lang={lang} />
        </div>
        <div class="col-12 col-sm-8 col-md-9 col-lg-10 works">
          <slot />
        </div>
      </div>
    </div>
    <footer>
      <p class="text-center">Niv Shapira / 2024</p>
    </footer>
  </body>
</html>
